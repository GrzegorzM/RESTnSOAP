@using (Ajax.BeginForm("GetWeatherByZipCode", "Weather", null, new AjaxOptions() { HttpMethod = "GET", LoadingElementId = "spinener", UpdateTargetId = "weatherContainer" }, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        <label for="zipCode">ZIP Code</label>
    </div>
    <div class="form-group">
        <input id="zipCode" name="zipCode" />
    </div>
    <button class="btn btn-primary">Get Weather</button>
}

<div id="weatherContainer"></div>